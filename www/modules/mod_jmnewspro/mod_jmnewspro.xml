  <files>
    <filename module="mod_jmnewspro">mod_jmnewspro.php</filename>
    <filename>index.html</filename>
    <filename>helper.php</filename>
    <folder>tmpl</folder>
    <folder>admin</folder>
    <folder>assets</folder>
    <folder>classes</folder>
