  <authorUrl>www.joomlaman.com</authorUrl>
  <version>1.0.6</version>
  <description>
	<![CDATA[
	
	]]>
  </description>

  <files>
    <filename module="mod_jmsocials">mod_jmsocials.php</filename>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <folder>tmpl</folder>
    <folder>admin</folder>
    <folder>language</folder>
    <folder>assets</folder>
  </files>

  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.mod_jmsocials.ini</language>
    <language tag="en-GB">en-GB/en-GB.mod_jmsocials.sys.ini</language>
  </languages>

  <config>
    <fields name="params" addfieldpath="/modules/mod_jmsocials/admin/elements">
      <fieldset name="basic">
        <field name="moduleclass_sfx" type="text" class="jm-field" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
      </fieldset>
      <fieldset name="manager" label="MOD_JMSOCIALS_MANAGER_LBL" description="MOD_JMSOCIALS_MANAGER_DESC">
        <field type="additem" default="" name="items" label="MOD_JMSOCIALS_ITEM_LBL" description="MOD_JMSOCIALS_ITEM_DESC"></field>
      </fieldset>
      <fieldset name="advanced">
        <field name="jmsocials_link_target"  class="jm-field single" type="list" default="_blank" label="MOD_JMSOCIALS_LINK_TARGET_LBL" description="MOD_JMSOCIALS_LINK_TARGET_DECS">
          <option value="_blank">New Window</option>
          <option value="_self">Same Window</option>
        </field>
        <field name="jmsocials_layout" type="layout" default="default" class="jm-field" label="MOD_JMSOCIALS_LAYOUT_LBL" description="MOD_JMSOCIALS_LAYOUT_DECS"/>
        <field name="jmsocials_showtitle" type="checkbox" value="1" class="jm-field showhide" label="MOD_JMSOCIALS_SHOW_TITLE_LBL" description="MOD_JMSOCIALS_SHOW_TITLE_DESC"/>
				<field type="asset" class="hidden" label="" name="asset" path="modules/mod_jmsocials/admin/assets/"></field>
      </fieldset>
    </fields>
  </config>
	 <updateservers>
        <server type="extension" name="JM Socials" priority="1">http://extensions.joomlaman.com/jmsocials/update.xml</server>
	</updateservers>
</extension>